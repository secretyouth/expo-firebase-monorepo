{
  "compilerOptions": {
    "typeRoots": ["./node_modules/"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src", "types", "keys"]
}
